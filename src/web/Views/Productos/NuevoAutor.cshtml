@using Entidades.Articulos
@model Autor
@{
  ViewData["Title"] = "NuevoAutor";

  Autor nuevo = ViewBag.NuevoAutor as Autor;
}

@if (nuevo != null)
{
  <h3>Se agrego un nuevo autor @nuevo.Nombre con ID = @nuevo.ID</h3>
}

<div class="row">

  <div class="offset-1 col-9">
    <div class="card m-4">
      <h4 class="card-header text-white bg-primary text-center">Agregar Nuevo Autor</h4>

      <div asp-validation-summary="ModelOnly" class="text-danger"
           data-summary-titulo="Lista de errores que impiden ingresar el autor"></div>

      <form asp-controller="Productos" asp-action="NuevoAutor" method="post">

        <div class="card-body">

          <div class="form-group">
            <label asp-for="Nombre">Nombre del Autor</label>
            <input asp-for="Nombre" class="form-control form-control-sm" autofocus="autofocus" />

            <span asp-validation-for="Nombre" class="text-danger"></span>
          </div>

          <div class="form-group">
            <label asp-for="Biografia">Biografia</label>
            <textarea asp-for="Biografia" class="form-control form-control-sm"></textarea>

            <span asp-validation-for="Biografia" class="text-danger"></span>
          </div>

        </div>

        <div class="card-footer">
          <button class="btn btn-primary float-right" type="submit">Agregar</button>
        </div>

      </form>

    </div>
  </div>

</div>

